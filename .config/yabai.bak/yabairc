
#bsp, stack, flow 

yabai -m config layout bsp

yabai -m config window_placement second_child 


# padding 
yabai -m config top_padding 11
yabai -m config bottom_padding 11
yabai -m config left_padding 11
yabai -m config right_padding 11
yabai -m config window_gap 12


# Mouse Settings 
yabai -m config mouse_follows_focus on 

yabai -m config mouse_modifier alt
  # left click & drag : move window
yabai -m config mouse_action1 move
  # right click & drage : resize window 
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

yabai -m rule --add app="^System Settings$" manage=on
yabai -m rule --add app="^Calculator$" manage=on
yabai -m rule --add app="^Karabiner-Elements$" manage=off


